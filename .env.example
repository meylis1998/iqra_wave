# Environment Configuration Template
# Copy this file to .env, .env.dev, .env.staging, or .env.production
# and fill in your actual values

# OAuth2 Configuration
OAUTH_CLIENT_ID=your-client-id-here
OAUTH_CLIENT_SECRET=your-client-secret-here

# API Endpoints
OAUTH_BASE_URL=https://oauth2.example.com
QURAN_API_BASE_URL=https://api.example.com

# Environment (dev | staging | production)
ENVIRONMENT=dev

# Feature Flags
ENABLE_LOGGING=true
ENABLE_CRASHLYTICS=false
ENABLE_ANALYTICS=false

# Sentry DSN (optional - leave empty to disable)
SENTRY_DSN=
